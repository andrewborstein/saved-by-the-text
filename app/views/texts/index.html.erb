<h1>Last 5 Texts</h1>

<div class="list-group">
  <% @texts.each do |text| %>
    <a href="" class="list-group-item">
      <strong><%= text.num %></strong>: <%= text.msg.presence || "Hey Kelly... you're all that and a bag of chips!"  %>
    </a>
  <% end %>
</div>

